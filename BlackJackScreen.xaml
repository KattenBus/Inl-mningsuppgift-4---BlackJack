<Window x:Class="GruppInlämning_4___BlackJack.BlackJackScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GruppInlämning_4___BlackJack"
        mc:Ignorable="d"
        Title="BlackJackScreen" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Image x:Name="FirstCardImageUser" HorizontalAlignment="Left" Height="90" Margin="713,336,0,0" VerticalAlignment="Top" Width="59"/>
        <Image x:Name="SecondCardImageUser" HorizontalAlignment="Left" Height="90" Margin="646,336,0,0" VerticalAlignment="Top" Width="63"/>
        <Image x:Name="FirstCardImageDealer" HorizontalAlignment="Left" Height="168" Margin="173,27,0,0" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="SecondCardImageDealer" HorizontalAlignment="Left" Height="164" Margin="32,27,0,0" VerticalAlignment="Top" Width="117" />
        <Button x:Name="DealCardButton" Content="Deal" HorizontalAlignment="Left" Margin="23,336,0,0" VerticalAlignment="Top" Click="DealCardButton_Click" Height="72" Width="127"/>
        <Label x:Name="CardTotalDealerLabel" Content="CardTotalDealer" HorizontalAlignment="Left" Margin="23,180,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="CardTotalUserLabel" Content="CardTotalUser" HorizontalAlignment="Left" Margin="521,164,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Image x:Name="ThirdCardImageUser" HorizontalAlignment="Left" Height="80" Margin="557,345,0,0" VerticalAlignment="Top" Width="69"/>
        <Image x:Name="FourthCardImageUser" HorizontalAlignment="Left" Height="85" Margin="475,345,0,0" VerticalAlignment="Top" Width="54"/>
        <Button x:Name="HitButton" Content="Hit" HorizontalAlignment="Left" Margin="258,362,0,0" VerticalAlignment="Top" Height="45" Width="87" Click="HitButton_Click" IsEnabled="False"/>
        <Button x:Name="StandButton" Content="Stand" HorizontalAlignment="Left" Margin="155,362,0,0" VerticalAlignment="Top" Height="46" Width="98" Click="StandButton_Click" IsEnabled="False"/>
        <Button x:Name="PlayAgainButton" Content="PLAY AGAIN!" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Height="89" Width="168" Click="PlayAgainButton_Click" Visibility="Hidden"/>
    </Grid>
</Window>
