<Window x:Class="GruppInlämning_4___BlackJack.BlackJackScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GruppInlämning_4___BlackJack"
        mc:Ignorable="d"
        Title="BlackJackScreen" Height="900" Width="1600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BlackJackTable.jpg"/>
        </Grid.Background>
        <Image x:Name="FirstCardImageUser" HorizontalAlignment="Left" Height="250" Margin="483,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="SecondCardImageUser" HorizontalAlignment="Left" Height="250" Margin="594,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="FirstCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="568,10,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="SecondCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="661,10,0,0" VerticalAlignment="Top" Width="175" />
        <Button x:Name="DealCardButton" Content="Deal" HorizontalAlignment="Left" Margin="466,416,0,0" VerticalAlignment="Top" Click="DealCardButton_Click" Height="80" Width="150" FontSize="24" FontFamily="Showcard Gothic"/>
        <Label x:Name="CardTotalDealerLabel" Content="CardTotalDealer" HorizontalAlignment="Left" Margin="306,275,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label x:Name="CardTotalUserLabel" Content="CardTotalUser" HorizontalAlignment="Left" Margin="1325,510,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Image x:Name="ThirdCardImageUser" HorizontalAlignment="Left" Height="250" Margin="689,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="FourthCardImageUser" HorizontalAlignment="Left" Height="250" Margin="800,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="HitButton" Content="Hit" HorizontalAlignment="Left" Margin="650,416,0,0" VerticalAlignment="Top" Height="80" Width="150" Click="HitButton_Click" IsEnabled="False" FontSize="24" FontFamily="Showcard Gothic"/>
        <Button x:Name="StandButton" Content="Stand" HorizontalAlignment="Left" Margin="839,416,0,0" VerticalAlignment="Top" Height="80" Width="150" Click="StandButton_Click" IsEnabled="False" FontSize="24" FontFamily="Showcard Gothic"/>
        <Button x:Name="PlayAgainButton" Content="PLAY AGAIN!" HorizontalAlignment="Center" Margin="0,388,0,0" VerticalAlignment="Top" Height="180" Width="312" Click="PlayAgainButton_Click" Visibility="hidden"/>
        <Image x:Name="FifthCardImageUser" HorizontalAlignment="Left" Height="250" Margin="919,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="ThirdCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="773,10,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="FourthCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="870,10,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="FifthCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="191,333,0,0" VerticalAlignment="Top" Width="175" RenderTransformOrigin="0.44,0.956"/>
        <Label x:Name="totalWinsLabel" Content="Total Wins: " HorizontalAlignment="Left" Margin="61,793,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Image x:Name="SixthCardImageUser" HorizontalAlignment="Left" Height="250" Margin="1041,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="SeventhCardImageUser" HorizontalAlignment="Left" Height="250" Margin="1238,596,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="SixthCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="989,10,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="SeventhCardImageDealer" HorizontalAlignment="Left" Height="250" Margin="1116,10,0,0" VerticalAlignment="Top" Width="175" RenderTransformOrigin="0.841,0.71"/>
        <Button x:Name="DoubleButton" Content="Double" HorizontalAlignment="Left" Margin="1022,416,0,0" VerticalAlignment="Top" Height="80" Width="150" Click="DoubleButton_Click" IsEnabled="False" FontSize="24" FontFamily="Showcard Gothic"/>
    </Grid>
</Window>
