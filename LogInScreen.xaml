<Window x:Class="GruppInlämning_4___BlackJack.LogInScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GruppInlämning_4___BlackJack"
        mc:Ignorable="d"
        Title="LogInScreen" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="usernameInput" HorizontalAlignment="Center" Margin="0,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordInput" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Center" Margin="0,302,0,0" VerticalAlignment="Top" Click="loginButton_Click"/>
        <Label Content="Please enter your details to login" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="251,182,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="251,245,0,0" VerticalAlignment="Top"/>
        <Label x:Name="failLabel" Content="" HorizontalAlignment="Left" Margin="283,156,0,0" VerticalAlignment="Top" Foreground="Red"/>
    </Grid>
</Window>
